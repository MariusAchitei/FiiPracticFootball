@model FiiPractivFootball_Web.Models.Season.SeasonModelView

@{
    ViewData["Title"] = "Details";
}

<style>
    h5{
        text-align: center;
    }
    .flag {
        height: 50px;
        width: 100px;
    }
</style>

<h1>Details</h1>

<div>
    <h4>SeasonModelView</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeagueId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeagueId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeagueName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeagueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Flag)
        </dt>
        <dd class="col-sm-10">
            <img class="flag" src=@Html.DisplayFor(model => model.Flag) />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Edition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Edition)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("ShowMatches", "ShowMatches", new { id = Model.Id }) |
    @Html.ActionLink("ShowTable", "ShowTable", new { id = Model.Id }) |
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>

@if (ViewBag.user.Admin == true)
{
    <form action="/Match/SimulateAll/">
        <input style="display:none" name="seasonId" value="@Model.Id" />
        <button class="btn-sm btn-secondary">
            Simulate All Matches
        </button>
    </form>
}
